  <image>
    <name>input</name>
    <label>image input</label>
    <channel>input</channel>
    <index>0</index>
    <description>image input</description>
  </image>
  
  <image>
    <name>output</name>
    <label>image output</label>
    <channel>output</channel>
    <index>1</index>
    <description>image output</description>
